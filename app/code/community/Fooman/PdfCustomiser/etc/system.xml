                    <div class="box">
                    <p>Please contact <a href="mailto:support@fooman.co.nz">Kristof</a> for support or if you require further customisations.</p>
                    <p>Bitte kontaktieren Sie <a href="mailto:support@fooman.co.nz">Kristof</a> f√ºr Support und weitere Anpassungen.</p>
                    </div>
                    <script type="text/javascript">
                    document.observe("dom:loaded", function() {

                            var logoPlacement = Class.create();
                            logoPlacement.prototype = {
                                    initialize : function()
                                    {
                                        Event.observe($('sales_pdf_all_alllogoplacement'), 'change', this.changePlacement.bind(this));
                                        this.changePlacement();

                                    },
                                    changePlacement: function(){

                                        if($('sales_pdf_all_alllogoplacement').getValue() == 'manual'){
                                            $('sales_pdf_all_alllogoheight').up().up().show();
                                            $('sales_pdf_all_alllogowidth').up().up().show();
                                            $('sales_pdf_all_alllogofromtop').up().up().show();
                                            $('sales_pdf_all_alllogofromleft').up().up().show();
                                        }else{
                                            $('sales_pdf_all_alllogoheight').up().up().hide();
                                            $('sales_pdf_all_alllogowidth').up().up().hide();
                                            $('sales_pdf_all_alllogofromtop').up().up().hide();
                                            $('sales_pdf_all_alllogofromleft').up().up().hide();

                                        }

                                    }
                             }
                            settings = new logoPlacement();
                    });
                    </script>

                    ]]>
